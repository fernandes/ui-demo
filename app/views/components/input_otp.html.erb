  <%# Pattern %>
  <%= render Docs::Example.new(
    name: "Pattern",
    description: "Use the pattern prop to restrict input to specific characters.",
    view_context: self
  ) do |example| %>
    <% example.erb do %>
      <%= render "ui/input_otp", length: 6, pattern: "^[a-zA-Z0-9]+$" do %>
