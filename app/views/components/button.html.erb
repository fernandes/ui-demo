<%= render Docs::ComponentPage.new(component_name: "button") do %>

  <%# Primary %>
  <%= render Docs::Example.new(
    name: "Primary",
    description: "The default button style.",
    view_context: self
  ) do |example| %>
    <% example.erb do %>
      <%= render "ui/button", content: "Button" %>
    <% end %>

    <% example.phlex do %>
      <%= render UI::Button.new { "Button" } %>
    <% end %>

    <% example.view_component do %>
      <%= render(UI::ButtonComponent.new) { "Button" } %>
    <% end %>
  <% end %>

