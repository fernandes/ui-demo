<%= render Docs::ComponentPage.new(component_name: "toggle") do %>

  <%# Default %>
  <%= render Docs::Example.new(
    name: "Default",
    description: "A two-state button that can be either on or off.",
    view_context: self
  ) do |example| %>
    <% example.erb do %>
      <%= render "ui/toggle", variant: "outline" do %>B<% end %>
    <% end %>

    <% example.phlex do %>
      <%= render UI::Toggle.new(variant: "outline") { "B" } %>
    <% end %>

    <% example.view_component do %>
      <%= render(UI::ToggleComponent.new(variant: "outline")) { "B" } %>
    <% end %>
  <% end %>

