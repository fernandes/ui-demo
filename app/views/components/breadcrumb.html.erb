  <%# Responsive with Dropdown %>
  <%= render Docs::Example.new(
    name: "Responsive with Dropdown",
    description: "Collapse intermediate items into a dropdown menu for long breadcrumb paths.",
    view_context: self
  ) do |example| %>
    <% example.erb do %>
      <%= render "ui/breadcrumb" do %>
        <%= render "ui/breadcrumb/list" do %>
