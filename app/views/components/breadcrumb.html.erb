<%= render Docs::ComponentPage.new(component_name: "breadcrumb") do %>

  <%# Default %>
  <%= render Docs::Example.new(
    name: "Default",
    description: "Displays the path to the current resource using a hierarchy of links.",
    view_context: self
  ) do |example| %>
    <% example.erb do %>
      <%= render "ui/breadcrumb" do %>
        <%= render "ui/breadcrumb/list" do %>
          <%= render "ui/breadcrumb/item" do %>
            <%= render "ui/breadcrumb/link", href: "/" do %>Home<% end %>
          <% end %>
