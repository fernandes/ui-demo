          <%= render "ui/breadcrumb/item" do %>
            <%= render "ui/breadcrumb/page" do %>Breadcrumb<% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <% example.phlex do %>
      <%= render UI::Breadcrumb.new do %>
        <%= render UI::BreadcrumbList.new do %>
          <%= render UI::BreadcrumbItem.new do %>
