            </div>
            <%= render UI::DialogFooterComponent.new(classes: "sm:justify-start") do %>
              <%= render(UI::DialogCloseComponent.new(variant: :secondary)) { "Close" } %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

<% end %>

