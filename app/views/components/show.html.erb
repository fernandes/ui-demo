<% content_for(:title) { @component_name.titleize } %>
<div class="container-wrapper px-6">
  <%# Generic show template that renders component-specific views %>
  <%# Note: The ComponentPage Phlex component handles its own sidebar layout %>
  <%
    component_view = "components/#{@component_name}"
    if lookup_context.exists?(component_view, [], false)
  %>
    <% cache "components/#{@component_name}" do %><%= render template: component_view %><% end %>
  <% else %>
    <div class="text-center py-12">
      <h1 class="text-3xl font-bold tracking-tight mb-4"><%= @component_name.titleize %></h1>
      <p class="text-muted-foreground mb-8">
        Documentation for this component is not yet available.
      </p>
      <p class="text-sm text-muted-foreground">
        Create a view at <code class="bg-muted px-1.5 py-0.5 rounded">app/views/components/<%= @component_name %>.html.erb</code>
      </p>
    </div>
  <% end %>
</div>
