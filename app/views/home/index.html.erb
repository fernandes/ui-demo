<div class="flex flex-1 flex-col mx-auto">
  <%# Hero Section %>
  <section class="border-grid">
    <div class="container-wrapper">
      <div class="container flex flex-col items-center gap-2 py-8 text-center md:py-16 lg:py-20 xl:gap-4">
        <%= render "ui/badge", variant: :secondary, classes: "gap-1" do %>
          <span class="flex size-2 rounded-full bg-blue-500" title="New"></span>
          New Components: Field, Input Group, Item and more
          <%= lucide_icon("arrow-right", class: "size-3") %>
        <% end %>

        <h1 class="text-primary leading-tighter text-4xl font-semibold tracking-tight text-balance lg:leading-[1.1] lg:font-semibold xl:text-5xl xl:tracking-tighter max-w-4xl">
          The Foundation for your Design System
        </h1>

        <p class="text-foreground max-w-3xl text-base text-balance sm:text-lg">
          A set of beautifully designed components that you can customize, extend, and build on. Start here then make it your own. Open Source. Open Code.
        </p>

        <div class="flex w-full items-center justify-center gap-2 pt-2">
          <%= render "ui/button", size: :sm do %>Get Started<% end %>
          <%= render "ui/button", variant: :ghost, size: :sm do %>View Components<% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Examples Navigation %>
  <div class="container-wrapper scroll-mt-24 hidden md:flex">
    <div class="container flex items-center justify-between gap-4 py-4">
      <div class="flex items-center flex-1 overflow-hidden">
        <span class="text-primary flex h-7 items-center justify-center px-4 text-center text-base font-medium">Examples</span>
      </div>
    </div>
  </div>

  <%# Examples Grid %>
  <div class="container-wrapper section-soft flex-1 pb-6">
    <div class="container overflow-hidden">
      <section class="theme-container hidden md:block">
        <div class="theme-container mx-auto grid gap-8 py-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-6 2xl:gap-8">

          <%# Column 1 - Payment Form %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <div class="w-full max-w-md rounded-lg border p-6">
              <form>
                <%= render "ui/field/group" do %>
                  <%= render "ui/field/set" do %>
                    <%= render "ui/field/legend", variant: "legend" do %>Payment Method<% end %>
                    <%= render "ui/field/description" do %>All transactions are secure and encrypted<% end %>

                    <%= render "ui/field/group" do %>
                      <%= render "ui/field" do %>
                        <%= render "ui/field/label", for_id: "card-name" do %>Name on Card<% end %>
                        <%= render "ui/input", id: "card-name", placeholder: "John Doe", required: true %>
                      <% end %>

                      <div class="grid grid-cols-3 gap-4">
                        <%= render "ui/field", classes: "col-span-2" do %>
                          <%= render "ui/field/label", for_id: "card-number" do %>Card Number<% end %>
                          <%= render "ui/input", id: "card-number", placeholder: "1234 5678 9012 3456", required: true %>
                          <%= render "ui/field/description" do %>Enter your 16-digit number.<% end %>
                        <% end %>

                        <%= render "ui/field", classes: "col-span-1" do %>
                          <%= render "ui/field/label", for_id: "cvv" do %>CVV<% end %>
                          <%= render "ui/input", id: "cvv", placeholder: "123", required: true %>
                        <% end %>
                      </div>

                      <div class="grid grid-cols-2 gap-4">
                        <%= render "ui/field" do %>
                          <%= render "ui/field/label", for_id: "exp-month" do %>Month<% end %>
                          <%= render "ui/select", value: "" do %>
                            <%= render "ui/select/trigger", placeholder: "MM", id: "exp-month" %>
                            <%= render "ui/select/content" do %>
                              <% (1..12).each do |month| %>
                                <%= render "ui/select/item", value: month.to_s.rjust(2, '0') do %><%= month.to_s.rjust(2, '0') %><% end %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>

                        <%= render "ui/field" do %>
                          <%= render "ui/field/label", for_id: "exp-year" do %>Year<% end %>
                          <%= render "ui/select", value: "" do %>
                            <%= render "ui/select/trigger", placeholder: "YYYY", id: "exp-year" %>
                            <%= render "ui/select/content" do %>
                              <% (2024..2030).each do |year| %>
                                <%= render "ui/select/item", value: year.to_s do %><%= year %><% end %>
                              <% end %>
                            <% end %>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>

                  <%= render "ui/field/separator" %>

                  <%= render "ui/field/set" do %>
                    <%= render "ui/field/legend", variant: "legend" do %>Billing Address<% end %>
                    <%= render "ui/field/description" do %>The billing address associated with your payment method<% end %>

                    <%= render "ui/field/group" do %>
                      <%= render "ui/field", orientation: "horizontal" do %>
                        <%= render "ui/checkbox", id: "same-address", name: "same_address", value: "yes", checked: true %>
                        <%= render "ui/label", for_id: "same-address", classes: "font-normal" do %>Same as shipping address<% end %>
                      <% end %>
                    <% end %>
                  <% end %>

                  <%= render "ui/field/separator" %>

                  <%= render "ui/field/set" do %>
                    <%= render "ui/field/group" do %>
                      <%= render "ui/field" do %>
                        <%= render "ui/field/label", for_id: "comments" do %>Comments<% end %>
                        <%= render "ui/textarea", id: "comments", placeholder: "Add any additional comments" %>
                      <% end %>
                    <% end %>
                  <% end %>

                  <div class="flex gap-2">
                    <%= render "ui/button", type: "submit" do %>Submit<% end %>
                    <%= render "ui/button", variant: :outline, type: "button" do %>Cancel<% end %>
                  </div>
                <% end %>
              </form>
            </div>
          </div>

          <%# Column 2 - Empty State & Badges %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%# Empty State %>
            <%= render "ui/empty", classes: "flex-none" do %>
              <%= render "ui/empty/header" do %>
                <%= render "ui/empty/media", variant: "default" do %>
                  <div class="*:data-[slot=avatar]:ring-background flex -space-x-2 *:data-[slot=avatar]:size-12 *:data-[slot=avatar]:ring-2 *:data-[slot=avatar]:grayscale">
                    <%= render "ui/avatar" do %>
                      <%= render "ui/avatar/image", src: "https://github.com/shadcn.png", alt: "@shadcn" %>
                    <% end %>
                    <%= render "ui/avatar" do %>
                      <%= render "ui/avatar/image", src: "https://github.com/maxleiter.png", alt: "@maxleiter" %>
                    <% end %>
                    <%= render "ui/avatar" do %>
                      <%= render "ui/avatar/image", src: "https://github.com/evilrabbit.png", alt: "@evilrabbit" %>
                    <% end %>
                  </div>
                <% end %>
                <%= render "ui/empty/title" do %>No Team Members<% end %>
                <%= render "ui/empty/description" do %>Invite your team to collaborate on this project.<% end %>
              <% end %>
              <%= render "ui/empty/content" do %>
                <%= render "ui/button", size: :sm do %>
                  <%= lucide_icon("plus", class: "size-4") %>
                  Invite Members
                <% end %>
              <% end %>
            <% end %>

            <%# Badges %>
            <div class="flex items-center gap-2">
              <%= render "ui/badge", variant: :default do %>
                <%= lucide_icon("loader-circle", class: "size-4 animate-spin") %>
                Syncing
              <% end %>
              <%= render "ui/badge", variant: :secondary do %>
                <%= lucide_icon("loader-circle", class: "size-4 animate-spin") %>
                Updating
              <% end %>
              <%= render "ui/badge", variant: :outline do %>
                <%= lucide_icon("loader-circle", class: "size-4 animate-spin") %>
                Loading
              <% end %>
            </div>

            <%# Button Group with Input %>
            <%= render "ui/button_group", classes: "[--radius:9999rem]" do %>
              <%= render "ui/button_group" do %>
                <%= render "ui/button", variant: :outline, size: :icon, "aria-label": "Add" do %>
                  <%= lucide_icon("plus", class: "size-4") %>
                <% end %>
              <% end %>
              <%= render "ui/button_group", classes: "flex-1" do %>
                <%= render "ui/input_group" do %>
                  <%= render "ui/input_group/input", placeholder: "Send a message..." %>
                  <%= render "ui/input_group/addon", align: "inline-end" do %>
                    <%= render "ui/button", variant: :ghost, size: :icon_xs, "aria-label": "Voice Mode" do %>
                      <%= lucide_icon("audio-lines", class: "size-4") %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>

            <%# Slider Field %>
            <div class="w-full max-w-md">
              <%= render "ui/field" do %>
                <%= render "ui/field/label" do %>Price Range<% end %>
                <%= render "ui/field/description" do %>Set your budget range ($<span class="font-medium tabular-nums">200</span> - <span class="font-medium tabular-nums">800</span>).<% end %>
                <%= render "ui/slider", value: [200, 800], min: 0, max: 1000, step: 50, classes: "mt-2" %>
              <% end %>
            </div>

            <%# Input Groups %>
            <div class="grid w-full max-w-sm gap-6">
              <%= render "ui/input_group" do %>
                <%= render "ui/input_group/addon", align: "inline-start" do %>
                  <%= lucide_icon("search", class: "size-4") %>
                <% end %>
                <%= render "ui/input_group/input", placeholder: "Search..." %>
                <%= render "ui/input_group/addon", align: "inline-end" do %>
                  12 results
                <% end %>
              <% end %>

              <%= render "ui/input_group" do %>
                <%= render "ui/input_group/addon", align: "inline-start" do %>
                  <span class="text-muted-foreground text-sm">https://</span>
                <% end %>
                <%= render "ui/input_group/input", placeholder: "example.com", classes: "!pl-1" %>
                <%= render "ui/input_group/addon", align: "inline-end" do %>
                  <%= render "ui/button", variant: :ghost, size: :icon_xs, "aria-label": "Info", classes: "rounded-full" do %>
                    <%= lucide_icon("info", class: "size-4") %>
                  <% end %>
                <% end %>
              <% end %>

              <%= render "ui/input_group" do %>
                <%= render "ui/input_group/textarea", placeholder: "Ask, Search or Chat..." %>
                <%= render "ui/input_group/addon", align: "block-end" do %>
                  <%= render "ui/button", variant: :outline, size: :icon_xs, "aria-label": "Add", classes: "rounded-full" do %>
                    <%= lucide_icon("plus", class: "size-4") %>
                  <% end %>
                  <%= render "ui/button", variant: :ghost, size: :xs do %>Auto<% end %>
                  <span class="text-muted-foreground text-sm ml-auto">52% used</span>
                  <%= render "ui/separator", orientation: :vertical, classes: "!h-4" %>
                  <%= render "ui/button", size: :icon_xs, classes: "rounded-full" do %>
                    <%= lucide_icon("arrow-up", class: "size-4") %>
                    <span class="sr-only">Send</span>
                  <% end %>
                <% end %>
              <% end %>

              <%= render "ui/input_group" do %>
                <%= render "ui/input_group/input", placeholder: "@shadcn" %>
                <%= render "ui/input_group/addon", align: "inline-end" do %>
                  <div class="bg-primary flex size-4 items-center justify-center rounded-full">
                    <%= lucide_icon("check", class: "size-3 text-white") %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <%# Column 3 - Items & Settings %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%# Secure Input %>
            <div class="grid w-full max-w-sm gap-6">
              <%= render "ui/input_group", classes: "[--radius:9999px]" do %>
                <%= render "ui/input_group/addon", align: "inline-start" do %>
                  <%= render "ui/button", variant: :secondary, size: :icon_xs, "aria-label": "Info" do %>
                    <%= lucide_icon("info", class: "size-4") %>
                  <% end %>
                <% end %>
                <%= render "ui/input_group/addon", align: "inline-start", classes: "text-muted-foreground !pl-1" do %>
                  https://
                <% end %>
                <%= render "ui/input_group/input", classes: "!pl-0.5" %>
                <%= render "ui/input_group/addon", align: "inline-end" do %>
                  <%= render "ui/button", variant: :ghost, size: :icon_xs, "aria-label": "Favorite" do %>
                    <%= lucide_icon("star", class: "size-4") %>
                  <% end %>
                <% end %>
              <% end %>
            </div>

            <%# Item with Two-factor authentication %>
            <%= render "ui/item", variant: "outline" do %>
              <%= render "ui/item/media" do %>
                <%= lucide_icon("shield-check", class: "size-5") %>
              <% end %>
              <%= render "ui/item/content" do %>
                <%= render "ui/item/title" do %>Two-factor authentication<% end %>
                <%= render "ui/item/description" do %>Verify via email or phone number.<% end %>
              <% end %>
              <%= render "ui/item/actions" do %>
                <%= render "ui/button", size: :sm do %>Enable<% end %>
              <% end %>
            <% end %>

            <%# Item with Profile verified %>
            <%= render "ui/item", variant: "outline" do %>
              <%= render "ui/item/media" do %>
                <%= lucide_icon("circle-check", class: "size-5 text-green-500") %>
              <% end %>
              <%= render "ui/item/content" do %>
                <%= render "ui/item/title" do %>Your profile has been verified.<% end %>
              <% end %>
              <%= render "ui/item/actions" do %>
                <%= lucide_icon("chevron-right", class: "size-4 text-muted-foreground") %>
              <% end %>
            <% end %>

            <div class="text-muted-foreground text-sm font-medium">Appearance Settings</div>

            <%# Compute Environment Radio Group %>
            <%= render "ui/field/set" do %>
              <%= render "ui/field/legend", variant: "legend" do %>Compute Environment<% end %>
              <%= render "ui/field/description" do %>Select the compute environment for your cluster.<% end %>

              <%= render "ui/field/group", classes: "gap-3 mt-4" do %>
                <%= render "ui/item", variant: "outline", classes: "has-[[data-state=checked]]:border-primary" do %>
                  <%= render "ui/item/content" do %>
                    <%= render "ui/item/title" do %>Kubernetes<% end %>
                    <%= render "ui/item/description" do %>Run GPU workloads on a K8s configured cluster. This is the default.<% end %>
                  <% end %>
                  <%= render "ui/item/actions" do %>
                    <%= render "ui/radio_button", id: "env-k8s", name: "compute_env", value: "kubernetes", checked: true %>
                  <% end %>
                <% end %>

                <%= render "ui/item", variant: "outline", classes: "opacity-60" do %>
                  <%= render "ui/item/content" do %>
                    <%= render "ui/item/title" do %>Virtual Machine<% end %>
                    <%= render "ui/item/description" do %>Access a VM configured cluster to run workloads. (Coming soon)<% end %>
                  <% end %>
                  <%= render "ui/item/actions" do %>
                    <%= render "ui/radio_button", id: "env-vm", name: "compute_env", value: "vm", disabled: true %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>

            <%# Number of GPUs %>
            <%= render "ui/field", orientation: "horizontal", classes: "items-center justify-between" do %>
              <div>
                <%= render "ui/field/label" do %>Number of GPUs<% end %>
                <%= render "ui/field/description" do %>You can add more later.<% end %>
              </div>
              <%= render "ui/button_group" do %>
                <%= render "ui/input", type: "number", value: "8", classes: "w-12 text-center" %>
                <%= render "ui/button", variant: :outline, size: :icon do %>
                  <%= lucide_icon("minus", class: "size-4") %>
                <% end %>
                <%= render "ui/button", variant: :outline, size: :icon do %>
                  <%= lucide_icon("plus", class: "size-4") %>
                <% end %>
              <% end %>
            <% end %>

            <%# Wallpaper Tinting Switch %>
            <%= render "ui/field", orientation: "horizontal", classes: "items-center justify-between" do %>
              <div>
                <%= render "ui/field/label" do %>Wallpaper Tinting<% end %>
                <%= render "ui/field/description" do %>Allow the wallpaper to be tinted.<% end %>
              </div>
              <%= render "ui/switch", id: "wallpaper-tinting", name: "wallpaper_tinting" %>
            <% end %>
          </div>

          <%# Column 4 - Additional Examples %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%# Add context button %>
            <%= render "ui/button", variant: :outline, classes: "w-full justify-start gap-2" do %>
              <%= lucide_icon("circle-plus", class: "size-4") %>
              Add context
            <% end %>

            <%# Ask input %>
            <%= render "ui/input_group" do %>
              <%= render "ui/input_group/input", placeholder: "Ask, search, or make anything..." %>
              <%= render "ui/input_group/addon", align: "inline-end" do %>
                <%= render "ui/button", variant: :ghost, size: :icon_xs do %>
                  <%= lucide_icon("paperclip", class: "size-4") %>
                <% end %>
                <%= render "ui/button", variant: :ghost, size: :xs do %>Auto<% end %>
                <%= render "ui/button", variant: :ghost, size: :xs do %>
                  <%= lucide_icon("globe", class: "size-3") %>
                  All Sources
                <% end %>
                <%= render "ui/button", size: :icon_xs, classes: "rounded-full" do %>
                  <%= lucide_icon("arrow-up", class: "size-4") %>
                <% end %>
              <% end %>
            <% end %>

            <%# Action buttons %>
            <%= render "ui/button_group" do %>
              <%= render "ui/button", variant: :ghost, size: :icon do %>
                <%= lucide_icon("arrow-left", class: "size-4") %>
              <% end %>
              <%= render "ui/button", variant: :outline, size: :sm do %>Archive<% end %>
              <%= render "ui/button", variant: :outline, size: :sm do %>Report<% end %>
              <%= render "ui/button", variant: :outline, size: :sm do %>Snooze<% end %>
              <%= render "ui/button", variant: :outline, size: :icon do %>
                <%= lucide_icon("ellipsis", class: "size-4") %>
              <% end %>
            <% end %>

            <%# Terms checkbox %>
            <%= render "ui/field", orientation: "horizontal", classes: "rounded-md border p-4" do %>
              <%= render "ui/checkbox", id: "terms", name: "terms", value: "accepted", checked: true %>
              <%= render "ui/label", for_id: "terms", classes: "font-normal" do %>
                I agree to the terms and conditions
              <% end %>
            <% end %>

            <%# Pagination %>
            <%= render "ui/button_group" do %>
              <%= render "ui/button", variant: :outline, size: :icon do %>1<% end %>
              <%= render "ui/button", variant: :outline, size: :icon do %>2<% end %>
              <%= render "ui/button", variant: :outline, size: :icon do %>3<% end %>
              <%= render "ui/button", variant: :ghost, size: :icon do %>
                <%= lucide_icon("arrow-left", class: "size-4") %>
              <% end %>
              <%= render "ui/button", variant: :ghost, size: :icon do %>
                <%= lucide_icon("arrow-right", class: "size-4") %>
              <% end %>
              <%= render "ui/button", variant: :outline, size: :sm do %>
                <%= lucide_icon("sparkles", class: "size-4") %>
                Copilot
              <% end %>
            <% end %>

            <%# Survey Question %>
            <%= render "ui/field/set" do %>
              <%= render "ui/field/legend", variant: "legend" do %>How did you hear about us?<% end %>
              <%= render "ui/field/description" do %>Select the option that best describes how you...<% end %>

              <div class="flex flex-wrap gap-2 mt-4">
                <%= render "ui/toggle", variant: :outline, pressed: true do %>
                  <%= lucide_icon("circle-check", class: "size-4") %>
                  Social Media
                <% end %>
                <%= render "ui/toggle", variant: :outline do %>Search Engine<% end %>
                <%= render "ui/toggle", variant: :outline do %>Referral<% end %>
                <%= render "ui/toggle", variant: :outline do %>Other<% end %>
              </div>
            <% end %>

            <%# Loading State %>
            <div class="flex flex-col items-center gap-4 rounded-lg border p-6 text-center">
              <%= lucide_icon("loader-circle", class: "size-8 animate-spin text-muted-foreground") %>
              <div>
                <div class="font-medium">Processing your request</div>
                <p class="text-muted-foreground text-sm">Please wait while we process your request. Do not refresh the page.</p>
              </div>
              <%= render "ui/button", variant: :outline do %>Cancel<% end %>
            </div>
          </div>

        </div>
      </section>
    </div>
  </div>
</div>
