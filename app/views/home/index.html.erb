<div class="flex flex-1 flex-col mx-auto">
  <%# Hero Section %>
  <section class="border-grid">
    <div class="container-wrapper">
      <div class="container flex flex-col items-center gap-2 py-8 text-center md:py-16 lg:py-20 xl:gap-4">
        <%= render "ui/badge", variant: :secondary, classes: "gap-1" do %>
          <span class="flex size-2 rounded-full bg-blue-500" title="New"></span>
          New Components: Field, Input Group, Item and more
          <%= lucide_icon("arrow-right", class: "size-3") %>
        <% end %>

        <h1 class="text-primary leading-tighter text-4xl font-semibold tracking-tight text-balance lg:leading-[1.1] lg:font-semibold xl:text-5xl xl:tracking-tighter max-w-4xl">
          The Foundation for your Design System
        </h1>

        <p class="text-foreground max-w-3xl text-base text-balance sm:text-lg">
          A set of beautifully designed components that you can customize, extend, and build on. Start here then make it your own. Open Source. Open Code.
        </p>

        <div class="flex w-full items-center justify-center gap-2 pt-2">
          <%= render "ui/button", size: :sm do %>Get Started<% end %>
          <%= render "ui/button", variant: :ghost, size: :sm do %>View Components<% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Examples Navigation %>
  <div class="container-wrapper scroll-mt-24 hidden md:flex">
    <div class="container flex items-center justify-between gap-4 py-4">
      <div class="flex items-center flex-1 overflow-hidden">
        <span class="text-primary flex h-7 items-center justify-center px-4 text-center text-base font-medium">Examples</span>
      </div>
    </div>
  </div>

  <%# Examples Grid %>
  <div class="container-wrapper section-soft flex-1 pb-6">
    <div class="container overflow-hidden">
      <section class="theme-container hidden md:block">
        <div class="theme-container mx-auto grid gap-8 py-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-6 2xl:gap-8">

          <%# Column 1 - FieldDemo %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%= render "home/field_demo" %>
          </div>

          <%# Column 2 - EmptyAvatarGroup, SpinnerBadge, ButtonGroupInputGroup, FieldSlider, InputGroupDemo %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%= render "home/empty_avatar_group" %>
            <%= render "home/spinner_badge" %>
            <%= render "home/button_group_input_group" %>
            <%= render "home/field_slider" %>
            <%= render "home/input_group_demo" %>
          </div>

          <%# Column 3 - InputGroupButtonExample, ItemDemo, FieldSeparator, AppearanceSettings %>
          <div class="flex flex-col gap-6 *:[div]:w-full *:[div]:max-w-full">
            <%= render "home/input_group_button" %>
            <%= render "home/item_demo" %>
            <%= render "ui/field/separator", classes: "my-4" do %>Appearance Settings<% end %>
            <%= render "home/appearance_settings" %>
          </div>

          <%# Column 4 - NotionPromptForm, ButtonGroupDemo, FieldCheckbox, ButtonGroups, FieldHear, SpinnerEmpty %>
          <div class="order-first flex flex-col gap-6 lg:hidden xl:order-last xl:flex *:[div]:w-full *:[div]:max-w-full">
            <%= render "home/notion_prompt_form" %>
            <%= render "home/button_group_demo" %>
            <%= render "home/field_checkbox" %>
            <div class="flex justify-between gap-4">
              <%= render "home/button_group_nested" %>
              <%= render "home/button_group_popover" %>
            </div>
            <%= render "home/field_hear" %>
            <%= render "home/spinner_empty" %>
          </div>

        </div>
      </section>
    </div>
  </div>
</div>
